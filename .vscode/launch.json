{
    // Verwendet IntelliSense zum Ermitteln möglicher Attribute.
    // Zeigen Sie auf vorhandene Attribute, um die zugehörigen Beschreibungen anzuzeigen.
    // Weitere Informationen finden Sie unter https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET 8",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net8.0/Heizung.ServerDotNet.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET 8 Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Transfer Data",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Transfer.ps1",
            "cwd": "${workspaceFolder}",
            "args": [
                "-SshConnectionString",
                "${input:SshConnection}"
            ]
        },
        {
            "name": "GetLogs",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/GetLogFiles.ps1",
            "cwd": "${workspaceFolder}",
            "args": [
                "-SshConnectionString",
                "${input:SshConnection}",
                "-LogFilesFolderPath",
                "${input:LogFilesFolderPath}"
            ]
        },
    ],
    "inputs": [
        {
            "id": "SshConnection",
            "description": "Die SSH-Verbindung, welche verwendet werden soll.",
            "type": "promptString",
            "default": "dominik@Raspberry-Pi-3-b"
        },
        {
            "id": "LogFilesFolderPath",
            "description": "Der Pfad von den Logdateien vom Server",
            "type": "promptString",
            "default": "/home/dominik/.config/Heizung.ServerDotNet"
        }
    ]
}